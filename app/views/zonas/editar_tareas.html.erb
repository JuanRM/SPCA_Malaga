<script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
<script type="text/javascript">bkLib.onDomLoaded(nicEditors.allTextAreas);</script>

<h1>Editar tareas</h1>
<hr/>
</br>

<p>
  <b>Zona:</b>
  <%= @zona.nombre %>
</p>


<%= form_for(@zona) do |f| %>
  <% if @zona.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@zona.errors.count, "error") %> prohibited this zona from being saved:</h2>

      <ul>
      <% @zona.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :"Tareas" %><br />
    <%= f.text_area :tareas, :style => "width:100%" %>
  </div>
  </br>
  </br>

  <div class="actions">
    <%= f.submit "Guardar cambios" %>
  </div>

<% end %>

</br>
<nav class="links_bajo">
  <span style="float:right">  
	<%= link_to 'Ficha', @zona %> 
  </span>
</nav>
